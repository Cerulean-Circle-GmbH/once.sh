#!/bin/bash
#clear
#export PS4='\033[90m+${LINENO} in ${#BASH_SOURCE[@]}>${FUNCNAME[0]}:${BASH_SOURCE[@]##*/} \033[0m'
#set -x

#echo "starting: $0 <LOG_LEVEL=$1>"

config.v() {
  echo "$0 version 2021-10-19 15:25"
}

config.init()
{
  export CONFIG=~/config/user.env
  echo $CONFIG
  if [ ! -d ~/config ]; then
    mkdir ~/config
    config.path
  #else
  #  source $CONFIG
  fi
}

config.usage()
{
  echo "You started 
$0

  Usage:
  ${0##*/}: command
      v         print version information
      init      initializes a new user config  
  
  Examples
    config v
    config init
  "
}

config.start()
{
  #echo "sourcing init"
  source init

  this.start "$@"
}

config.start "$@"

